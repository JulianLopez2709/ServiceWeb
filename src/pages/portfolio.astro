---
import Layout from "../layouts/Layout.astro";
import Header from "../components/portfolio/Header.astro";
import FooterMobile from "../components/portfolio/FooterMobile.astro";
import Experience from "../components/portfolio/Experience.astro";
import Badge from "../components/portfolio/Badge.astro";
import GitHubIcon from "../icons/GitHub.astro";
import WorkIcon from "../icons/Work.astro";
import CodeIcon from "../icons/Code.astro";
import PersonIcon from "../icons/Person.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import MailIcon from "../icons/Mail.astro";
import SocialPill from "../components/portfolio/SocialPill.astro";
import { Code } from "astro:components";
---

<Layout
    title="Portfolio Julián López - Desarrollador y Programador Web y Mobile"
    description="Contrata a Julián López para crear aplicación web y móvil. Desarrollador Web. Especializado en crear aplicaciones unicas."
>
    <div
        class="bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
        <Header />
        <main class="text-white">
            <section class="w-full mx-auto lg:w-[720px] py-40 pb-24">
                <h1 class="text-5xl font-bold flex flex-row gap-x-4 pb-7">
                    Hey, soy Julián David<a
                        href="https://www.linkedin.com/in/julian-lopez09/"
                        class="flex justify-center items-center"
                        ><Badge>Disponible para trabajar</Badge></a
                    >
                </h1>
                <h2 class="text-2xl pb-7">
                    +3 años de experiencia. <span class="text-yellow-400"
                        >Tecnologo en Analisis y Desarrollo de Software</span
                    ><span class="text-blue-400/80"> de Colombia.</span>
                    <span class="text-red-400">
                        Especializado en desarrollar aplicaciones y páginas unicas.
                    </span>
                </h2>
                <ul>
                    <li class="flex gap-x-4">
                        <SocialPill href="https://github.com/JulianLopez2709">
                            <GitHubIcon class="size-6" />
                            GitHub
                        </SocialPill>

                        <SocialPill
                            href="https://www.linkedin.com/in/julian-lopez09/"
                        >
                            <LinkedInIcon class="size-6" />
                            LinkedIn
                        </SocialPill>

                        <SocialPill href="mailto:jdlopez4828@gmail.com">
                            <MailIcon class="size-6" />
                            jdlopez4828@gmail.com
                        </SocialPill>
                    </li>
                </ul>
            </section>

            <section id="experience" class="w-full mx-auto lg:w-[720px]">
                <h2
                    class="flex items-center gap-x-4 mb-6 text-2xl font-semibold"
                >
                    <WorkIcon class="size-6" /> Experiencia laboral
                </h2>
                <Experience />
            </section>


            <section id="proyecto" class="w-full mx-auto lg:w-[720px]">
                <h2
                    class="flex items-center gap-x-4 mb-6 text-2xl font-semibold"
                >
                    <CodeIcon class="size-6" /> Proyectos
                </h2>
            </section>



            <section id="sobre-mi" class="w-full mx-auto lg:w-[720px]">
                <h2
                    class="flex items-center gap-x-4 mb-6 text-2xl font-semibold"
                >
                    <PersonIcon class="size-6" /> Sobre mí
                </h2>


                <div>

                </div>
            </section>
        </main>

        <FooterMobile/>
    </div>
</Layout>

