<script>
 const nav = document.querySelector("nav");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 50) {
      nav.classList.add("bg-blue-950", "bg-opacity-60", "backdrop-blur-md");
    } else {
      nav.classList.remove("bg-blue-950", "bg-opacity-60", "backdrop-blur-md");
    }
  });
</script>

